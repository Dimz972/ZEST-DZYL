

    <div class="form-container">
        <h2>Formulaire d'Ajout de Plat</h2>
        
        <form action="/plats/add" method="POST" id="platForm" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Nom du plat <span class="required">*</span></label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required 
                    placeholder="Entrez le nom du plat"
                    value="<%= typeof plat !== 'undefined' ? plat.name : '' %>"
                >
            </div>

            <div class="form-group">
                <label for="origin">Origine <span class="required">*</span></label>
                <select id="origin" name="origin" required>
                    <option value="">Sélectionnez l'origine</option>
                    <option value="Martinique" <%= typeof plat !== 'undefined' && plat.origin === 'Martinique' ? 'selected' : '' %>>Martinique</option>
                    <option value="Guadeloupe" <%= typeof plat !== 'undefined' && plat.origin === 'Guadeloupe' ? 'selected' : '' %>>Guadeloupe</option>
                    <option value="Réunion" <%= typeof plat !== 'undefined' && plat.origin === 'Réunion' ? 'selected' : '' %>>Réunion</option>
                    <option value="Haïti" <%= typeof plat !== 'undefined' && plat.origin === 'Haîti' ? 'selected' : '' %>>Haïti</option>
                    <option value="Mexicaine" <%= typeof plat !== 'undefined' && plat.origin === 'Mexicaine' ? 'selected' : '' %>>Mexicaine</option>
                    <option value="Autre" <%= typeof plat !== 'undefined' && plat.origin === 'Autre' ? 'selected' : '' %>>Autre</option>
                </select>
            </div>

            <div class="form-group">
                <label>Options</label>
                <div class="checkbox-group">
                    <input type="checkbox" id="isSpicy" name="isSpicy" <%= typeof plat !== 'undefined' && plat.isSpicy ? 'checked' : '' %>>
                    <label for="isSpicy">Épicé</label>
                    
                    <input type="checkbox" id="isVegetarian" name="isVegetarian" <%= typeof plat !== 'undefined' && plat.isVegetarian ? 'checked' : '' %>>
                    <label for="isVegetarian">Végétarien</label>
                </div>
            </div>

            <div class="form-group">
                <label for="ingredients">Ingrédients <span class="required">*</span></label>
                <div id="ingredientsContainer">
                    <div class="ingredient-input">
                        <input 
                            type="text" 
                            name="ingredients[]" 
                            required 
                            placeholder="Entrez un ingrédient"
                            value="<%= typeof plat !== 'undefined' && plat.ingredients && plat.ingredients[0] ? plat.ingredients[0] : '' %>"
                        >
                    </div>
                </div>
                <button type="button" onclick="addIngredient()">+ Ajouter un ingrédient</button>
            </div>
            
            <script>
                function addIngredient() {
                    const container = document.getElementById('ingredientsContainer');
                    const div = document.createElement('div');
                    div.className = 'ingredient-input';
                    div.innerHTML = `
                        <input 
                            type="text" 
                            name="ingredients[]" 
                            required 
                            placeholder="Entrez un ingrédient"
                        >
                        <button type="button" onclick="this.parentElement.remove()">-</button>
                    `;
                    container.appendChild(div);
                }
            </script>

            <div class="form-group"></div>
                <label for="description">Description <span class="required">*</span></label>
                <textarea 
                    id="description" 
                    name="description" 
                    required 
                    placeholder="Décrivez le plat"
                    rows="3"
                ><%= typeof plat !== 'undefined' ? plat.description : '' %></textarea>
            </div>

            <div class="form-group">
                <label for="image">URL de l'image</label>
                <input 
                    type="file" 
                    id="image" 
                    name="image" 
                    placeholder="URL de l'image du plat"
                    value="<%= typeof plat !== 'undefined' ? plat.image : '' %>"
                >
            </div>

            <div class="form-group">
                <label for="price">Prix <span class="required">*</span></label>
                <input 
                    type="number" 
                    id="price" 
                    name="price" 
                    required 
                    step="0.01" 
                    min="0"
                    placeholder="0.00"
                    value="<%= typeof plat !== 'undefined' ? plat.price : '' %>"
                >
            </div>

            <button type="submit">Ajouter le plat</button>
        </form>
    </div>



